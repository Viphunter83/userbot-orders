# === PRODUCTION ENVIRONMENT ===
ENVIRONMENT=production

# Telegram
TELEGRAM_API_ID=<получить от https://my.telegram.org>
TELEGRAM_API_HASH=<получить от https://my.telegram.org>
TELEGRAM_PHONE=+1234567890
TELEGRAM_PASSWORD=<optional 2FA>

# Supabase (Production URL)
SUPABASE_USER=postgres
SUPABASE_PASSWORD=<strong_password>
SUPABASE_HOST=<project>.supabase.co
SUPABASE_PORT=5432
SUPABASE_DB=postgres
SUPABASE_URL=https://<project>.supabase.co

# LLM Configuration
LLM_PROVIDER=proxyapi
LLM_MODEL=gpt-4o-mini
LLM_API_KEY=<ProxyAPI key>
LLM_BASE_URL=https://api.proxyapi.ru/openai/v1
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=512
LLM_MAX_RETRIES=3
LLM_TIMEOUT_SECONDS=30
LLM_DAILY_BUDGET_USD=10.0
LLM_ANALYSIS_THRESHOLD=0.5

# Logging
LOG_LEVEL=INFO

# Database
DATABASE_ECHO=false

